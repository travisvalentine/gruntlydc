<ul class="nav pull-right">
  <li><%= link_to "Sign Up", root_path %></li>
  <li class="dropdown">
    <a href="#"
          class="dropdown-toggle"
          data-toggle="dropdown">
          Already a member? Log in
          <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
      <%= form_tag sessions_path, :class => "well" do %>
        <% if !alert.nil? %>
          <div class="alert alert-error">
            <p id="error"><%= flash.now[:alert] %></p>
          </div>
        <% end %>
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email], :autofocus => true %>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
        <%= check_box_tag :remember_me, 1, params[:remember_me] %>
        <%= label_tag :remember_me, nil, :id => "checkbox" %>
        <%= submit_tag "Log in", :class => "btn btn-small pull-right" %>
      <% end %>
    </ul>
  </li>
</ul>