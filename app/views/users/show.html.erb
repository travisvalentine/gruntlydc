<h4><%= @user.full_name %></h4>
<h6><%= @user.location %></h6>

<% if @user.races.any? %>
  <h4>Races</h4>
  <ul>
    <%= render partial: "race_users/race", collection: @user.races %>
  </ul>
<% end %>

<% if @user.activities.any? %>
  <h4>Activity</h4>
  <ul>
    <%= render partial: "activities/activity", collection: @user.activities.reverse %>
  </ul>
<% end %>
